# Supabase Configuration
# Get these from https://supabase.com/dashboard/project/[project-id]/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-public-key-here

# Optional: Stripe Payment Integration
# Get these from https://dashboard.stripe.com/apikeys

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key

# Optional: Vercel Analytics
# Get ID from Vercel Dashboard

NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# Optional: Sentry Error Tracking
# Get from https://sentry.io/

NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Database Connection (if using direct connection)
# DATABASE_URL=postgresql://user:password@host:5432/database

# Email Service (for transactional emails in future)
# SENDGRID_API_KEY=your-sendgrid-key
# RESEND_API_KEY=your-resend-key

# Node Environment
NODE_ENV=development

# App URL (for redirects and callbacks)
# ⚠️ UPDATE FOR PRODUCTION: Change http://localhost:3000 to your actual domain
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API URL (used by client-side components for fetches)
# ⚠️ UPDATE FOR PRODUCTION: Change http://localhost:3000 to your actual domain
NEXT_PUBLIC_API_URL=http://localhost:3000

# Next Auth URL (session configuration)
# ⚠️ UPDATE FOR PRODUCTION: Change http://localhost:3000 to your actual domain
NEXTAUTH_URL=http://localhost:3000

# NextAuth Secret (for session signing)
# ⚠️ CRITICAL: Generate a new secure secret for production
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secure-random-secret-here
